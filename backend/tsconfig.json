{
    "display": "Node 20",
    "_version": "20.1.0",
    "exclude": ["node_modules"],
    "include": ["./types", "./src"],
    "compilerOptions": {
        "lib": ["es2023"],
        "module": "CommonJS",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "typeRoots": ["./types"],
        "types": ["express"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}
